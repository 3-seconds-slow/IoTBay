<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance (Links to an external site.)" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee (Links to an external site.) http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd (Links to an external site.)">
    <servlet>
        <servlet-name>ConnectionServlet</servlet-name>
        <servlet-class>uts.isd.controller.ConnectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterClientServlet</servlet-name>
        <servlet-class>uts.isd.controller.RegisterClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectionServlet</servlet-name>
        <url-pattern>/ConnectionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterClientServlet</servlet-name>
        <url-pattern>/RegisterClientServlet</url-pattern>
    </servlet-mapping>  
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
